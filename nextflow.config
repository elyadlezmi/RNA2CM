   
cleanup = true

profiles {

    standard {
        process.executor = 'local'
        process.container = 'elyadl/rna2cm'
        docker.enabled = true
        process.memory = '16GB'
    }

    cluster {
        process.module = 'singularity/3.1.0'
        process.executor = 'slurm'
        process.container = 'docker://elyadl/rna2cm'
        singularity.enabled = true
        process.memory = '16GB'
           
    }
    
    local { 
    	process.executor = 'local'
    }

}
