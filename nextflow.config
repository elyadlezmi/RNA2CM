
process {

   memory = '4GB'
   time = '12h'
   errorStrategy = 'retry'
}


profiles {

    standard {
        process.executor = 'local'
        docker.enabled = true
        process.container = 'elyadl/rna2cm'
    }

    cluster {
        process.executor = 'slurm'
        process.beforeScript = "module load singularity"
        process.container = 'docker://elyadl/rna2cm'
        singularity.enabled = true
        singularity.runOptions = "-B $launchDir -B $projectDir/data"
        singularity.cacheDir = "$launchDir/work"      
    }
}

cleanup = true
