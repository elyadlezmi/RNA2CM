   
cleanup = true

profiles {

    standard {
        process.executor = 'local'
        process.container = 'elyadl/rna2cm'
        docker.enabled = true
    }

    cluster {
    	process.module='singularity'
        process.executor = 'slurm'
        process.memory = '64GB'
        singularity.enabled = true
        process.container = 'docker://elyadl/rna2cm'
    }
    
    local { 
    	process.executor = 'local'
    }

}
