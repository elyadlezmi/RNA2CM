   
cleanup = true

profiles {

    standard {
        process.executor = 'local'
        process.container = 'elyadl/rna2cm'
        docker.enabled = true
        process.memory = '16GB'
    }

    cluster {
        process.executor = 'slurm'
        process.beforeScript = 'module load singularity'
        process.container = 'docker://elyadl/rna2cm'
        singularity.enabled = true
        singularity.runOptions = "-B $launchDir"
        singularity.cacheDir = "$launchDir/work"
        process.memory = '16GB'          
    }
}
